# Server Configuration
NODE_ENV=development
PORT=8080

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/loopjs
MONGO_URI=mongodb://localhost:27017/loopjs

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-local-development-only-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-for-local-development

# Rate Limiting (disabled for development)
BYPASS_RATE_LIMIT=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000
