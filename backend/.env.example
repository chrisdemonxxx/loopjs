# Database Configuration
MONGODB_URI=mongodb://localhost:27017/loopjs

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=1h
JWT_REFRESH_TOKEN_EXPIRATION=7d
SESSION_SECRET=your-session-secret-here-change-in-production

# Server Configuration
PORT=8080
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://loopjs.vidai.sbs

# AI Configuration
# Gemini API (Primary LLM)
GEMINI_API_KEY=your-gemini-api-key-here

# Hugging Face API (For Point Generator and VL LM)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# VL LM Configuration (Vision Language Model - Backup LLM)
VLLM_API_KEY=your-vllm-api-key-here
VLLM_MODEL=microsoft/git-base
VLLM_TRAINED=false

# AI Provider Configuration
AI_PRIMARY_PROVIDER=gemini
AI_USE_VLLM_BACKUP=true

# Hugging Face Point Generator Model
HF_POINT_GENERATOR_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Rate Limiting
BYPASS_RATE_LIMIT=false

# Logging
LOG_LEVEL=INFO

# Telegram Configuration (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
