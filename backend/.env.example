# Server Configuration
PORT=8080
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/loopjs

# JWT Configuration (REQUIRED IN PRODUCTION)
JWT_SECRET=your-secure-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=1h
JWT_REFRESH_TOKEN_EXPIRATION=7d
SESSION_SECRET=your-session-secret-here-change-in-production

# AI Services
# Gemini API (Primary LLM initially)
GEMINI_API_KEY=your-gemini-api-key-here

# Hugging Face API (For Point Generator and VL LM)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
VL_LM_API_KEY=your-huggingface-api-key-here  # Can use same as HUGGINGFACE_API_KEY

# VL LM Configuration
VL_LM_MODEL=microsoft/DialoGPT-large
VL_LM_TRAINED=false  # Set to true once VL LM is trained

# Hugging Face Point Generator Configuration
HF_POINT_GENERATOR_MODEL=microsoft/DialoGPT-medium

# Security
# Set BYPASS_RATE_LIMIT=true only in development
BYPASS_RATE_LIMIT=false

# Telegram (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
